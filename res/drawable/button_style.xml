<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient 
                android:angle="270" 
                android:endColor="@color/button_press_color" 
                android:startColor="@color/button_press_color" />

            <stroke 
                android:width="0dip" 
                android:color="#f403c9" />

            <corners android:radius="10dp" />

            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
    </shape></item>
    
    <item android:state_focused="true"><shape>
            <gradient 
                android:angle="270" 
                android:endColor="@color/button_focus_color" 
                android:startColor="@color/button_focus_color" />

            <stroke 
                android:width="0dip" 
                android:color="#f403c9" />

            <corners android:radius="10dp" />

            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
    </shape></item>
    
    <item><shape>
            <gradient 
                android:angle="180" 
                android:endColor="@color/button_default_color" 
                android:startColor="@color/button_default_color" />

            <stroke 
                android:width="0dip" 
                android:color="#f403c9" />

            <corners android:radius="10dip" />

            <padding 
                android:bottom="10dp" 
                android:left="10dp" 
                android:right="10dp" 
                android:top="10dp" />
    </shape></item>

</selector>